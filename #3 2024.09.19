#include <stdio.h>

int main() {
    int stock[5] = {0, 0, 0, 0, 0};   // 5개 상품 재고
    int menu;
    int product_id;
    int amount;

    while (1) {
        printf("\n[쇼핑몰 관리 프로그램]\n");
        printf("원하는 메뉴를 선택하세요. (1. 입고, 2. 판매, 3. 상품현황, 4. 종료)\n> ");
        scanf("%d", &menu);

        
        if (menu == 1) {
            printf("(입력) 1: 전체 상품 입고수량 입력, 2: 개별 상품 입고 입력\n> ");
            scanf("%d", &product_id);

          
            if (product_id == 1) {
                printf("(입력) 전체 상품 입고수량 5개 입력\n> ");
                for (int i = 0; i < 5; i++) {
                    scanf("%d", &amount);
                    stock[i] += amount;
                }
            }
          
            else if (product_id == 2) {
                printf("(입력) 상품ID (0~4)\n> ");
                scanf("%d", &product_id);
                printf("(입력) 입고수량\n> ");
                scanf("%d", &amount);
                stock[product_id] += amount;
            }
        }


        else if (menu == 2) {
            printf("(입력) 1: 전체 상품 판매수량 입력, 2: 개별 상품 판매 입력\n> ");
            scanf("%d", &product_id);

            if (product_id == 1) {
                printf("(입력) 전체 상품 판매수량 5개 입력\n> ");
                for (int i = 0; i < 5; i++) {
                    scanf("%d", &amount);
                    if (stock[i] >= amount) stock[i] -= amount;
                    else stock[i] = 0;
                }
            }
          
            else if (product_id == 2) {
                printf("(입력) 상품ID (0~4)\n> ");
                scanf("%d", &product_id);
                printf("(입력) 판매수량\n> ");
                scanf("%d", &amount);

                if (stock[product_id] >= amount)
                    stock[product_id] -= amount;
                else
                    stock[product_id] = 0;
            }
        }

        
        else if (menu == 3) {
            printf("\n--- 상품 현황 ---\n");
            for (int i = 0; i < 5; i++) {
                printf("상품 %d 재고: %d\n", i, stock[i]);
            }
        }

      
        else if (menu == 4) {
            printf("프로그램을 종료합니다.\n");
            break;
        }
    }

    return 0;
}
